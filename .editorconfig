 
# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
max_line_length = 120

[*.py]
indent_size = 4

[*.yml]
indent_size = 2

[*.js]
indent_size = 2

[LICENSE]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
insert_final_newline = false

[.gitmodules]
indent_style = tab